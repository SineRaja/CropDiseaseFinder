<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fruits">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FLOWERS"
        android:gravity="center"
        android:textSize="37sp"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:background="#70CC74"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/i1"
            android:layout_width="116dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/rose" />

        <ImageView
            android:id="@+id/i2"
            android:layout_width="116dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/fuchsia" />
        <ImageView
            android:layout_width="116dp"
            android:layout_height="120dp"
            android:id="@+id/i3"
            android:layout_marginLeft="10dp"
            android:src="@drawable/orchids"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="215dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROSE"
            android:textColor="#EB0A0300"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FUCHSIA"
            android:layout_marginLeft="75dp"
            android:textColor="#EB0A0300"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORCHIDS"
            android:layout_marginLeft="50dp"
            android:textColor="#EB0A0300"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="260dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/i4"
            android:layout_width="116dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/peace" />

        <ImageView
            android:id="@+id/i5"
            android:layout_width="116dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/amaryllis" />
        <ImageView
            android:layout_width="116dp"
            android:layout_height="120dp"
            android:id="@+id/i6"
            android:layout_marginLeft="10dp"
            android:src="@drawable/cacti"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="370dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peace_Lilly"
            android:textColor="#EB0A0300"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amaryllis"
            android:layout_marginLeft="15dp"
            android:textColor="#EB0A0300"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indoor_Cacti"
            android:layout_marginLeft="30dp"
            android:textColor="#EB0A0300"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="410dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/i7"
            android:layout_width="116dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/bougainvillea" />

        <ImageView
            android:id="@+id/i8"
            android:layout_width="116dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/kerria" />
        <ImageView
            android:layout_width="116dp"
            android:layout_height="120dp"
            android:id="@+id/i9"
            android:layout_marginLeft="10dp"
            android:src="@drawable/easter"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="525dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bougainvillea"
            android:textColor="#EB0A0300"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kerria"
            android:layout_marginLeft="35dp"
            android:textColor="#EB0A0300"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easter Lily"
            android:layout_marginLeft="40dp"
            android:textColor="#EB0A0300"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>