<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".flowers">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FRUITS"
        android:gravity="center"
        android:textSize="37sp"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:background="#70CC74"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/apple"
            android:layout_width="116dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/apple" />

        <ImageView
            android:id="@+id/orange"
            android:layout_width="116dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/orange" />
        <ImageView
            android:layout_width="116dp"
            android:layout_height="120dp"
            android:id="@+id/sweetcorn"
            android:layout_marginLeft="10dp"
            android:src="@drawable/sweetcorn"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="215dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple"
            android:textColor="#EB0A0300"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orange"
            android:layout_marginLeft="60dp"
            android:textColor="#EB0A0300"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sweet Corn"
            android:layout_marginLeft="50dp"
            android:textColor="#EB0A0300"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="260dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pomegranate"
            android:layout_width="116dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/pomegranate" />

        <ImageView
            android:id="@+id/banana"
            android:layout_width="116dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/banana" />
        <ImageView
            android:layout_width="116dp"
            android:layout_height="120dp"
            android:id="@+id/grapes"
            android:layout_marginLeft="10dp"
            android:src="@drawable/grapes"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="370dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pomegranate"
            android:textColor="#EB0A0300"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="banana"
            android:layout_marginLeft="35dp"
            android:textColor="#EB0A0300"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="53dp"
            android:text="grapes"
            android:textColor="#EB0A0300"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="410dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/blackberry"
            android:layout_width="116dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/blackberry" />

        <ImageView
            android:id="@+id/strawberry"
            android:layout_width="116dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/strawberry" />
        <ImageView
            android:layout_width="116dp"
            android:layout_height="120dp"
            android:id="@+id/blueberry"
            android:layout_marginLeft="10dp"
            android:src="@drawable/blueberry"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="525dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blackberry"
            android:textColor="#EB0A0300"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strawberry"
            android:layout_marginLeft="20dp"
            android:textColor="#EB0A0300"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blueberry"
            android:layout_marginLeft="35dp"
            android:textColor="#EB0A0300"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>